  
{
    "swagger": "2.0",
    "info": {
        "description": "This is FundooNotes Api",
        "version": "1.0.0",
        "title": "FundooNotes API"
    },
    "host": "localhost:3000",
    "tags": [
        {
            "name": "FundooNotes",
            "description": "Creating Note Taking API Like Google Keep...!"
        }
    ],
    "schemes": [
        "http"
    ],
    "consumes": [
        "application/json"
    ],
    "produces": [
        "application/json"
    ],
    "paths": {
        "/user": {
            "post": {
                "tags": [
                    "FundooNotes user registration"
                ],
                "description": "create a new user",
                "summary": "create a user",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "parameters": [
                    {
                        "name": " user ",
                        "in": "body",
                        "required": true,
                        "schema": { 
                            "type": "object",
                            "properties": {
                                "firstName": {
                                    "type": "string"
                                },
                                "lastName": {
                                    "type": "string"
                                },
                                "email": {
                                    "type": "string"
                                },
                                "password": {
                                    "type": "string"
                                }
                            }
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "User created successfully"
                    },
                    "400": {
                        "description": "user cannot be empty"
                    }
                }
            }
        },
        "/login": {
            "post": {
                "tags": [
                    "FundooNote user login"
                ],
                "description": "create a user login",
                "summary": "user login",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "parameters": [
                    {
                        "name": " user login ",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "type": "object",
                            "properties": {
                                "email": {
                                    "type": "string"
                                },
                                "password": {
                                    "type": "string"
                                }
                            }
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "User login successful"
                    },
                    "400": {
                        "description": "user login unsuccessful"
                    }
                }
            }
        },
        "/forgotPassword": {
            "post": {
                "tags": [
                    "FundooNote user forgot password"
                ],
                "description": "create a forgot password endpoint",
                "summary": "forgot password",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "parameters": [
                    {
                        "name": " forgot password ",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "type": "object",
                            "properties": {
                                "email": {
                                    "type": "string"
                                }
                            }
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Email sent successfully"
                    },
                    "400": {
                        "description": "Email Not Sent "
                    }
                }
            }
        },
        "/resetPassword": {
            "post": {
                "tags": [
                    "FundooNote user reset password"
                ],
                "description": "create a reset Password endpoint",
                "summary": "Reset Password",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "parameters": [
                    {
                        "name": " Reset Password ",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "type": "object",
                            "properties": {
                                "token": {
                                    "type": "string"
                                },
                                "password": {
                                    "type": "string"
                                }
                            }
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Password reset Successfully"
                    },
                    "400": {
                        "description": "Password Is Not Reset"
                    }
                }
            }
        }
    }
}